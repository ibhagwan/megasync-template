post_extract() {
	vsrcextract -C src/MEGASync/mega "mega-sdk-${_sdk_commit}.tar.gz"
	vsrccopy .clang-format .
}

post_install() {
	rm -rf ${DESTDIR}/opt
	vlicense LICENCE.md
	vlicense installer/terms.txt
	vlicense src/MEGASync/mega/LICENSE LICENCE-SDK
}
